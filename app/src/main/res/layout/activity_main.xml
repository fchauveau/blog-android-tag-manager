<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codetroopers.sample.sampletagmanager.MainActivity">

    <LinearLayout android:id="@+id/main_buttons_layout"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
        >

        <Button
            android:id="@+id/main_button_load_fresh"
            style="@style/button_solid"
            android:layout_marginTop="30dp"
            android:text="Load Fresh"/>

        <Button
            android:id="@+id/main_button_load_default"
            style="@style/button_solid"
            android:layout_marginTop="30dp"
            android:text="Load Default"
            />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/main_buttons_layout"
        android:layout_centerInParent="true"
        android:columnCount="2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feature 1 Status : "/>

        <TextView
            android:id="@+id/feature_1_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unknown"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feature 2 Status : "/>

        <TextView
            android:id="@+id/feature_2_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unknown"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feature 3 Status : "/>

        <TextView
            android:id="@+id/feature_3_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unknown"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feature 4 Status : "/>

        <TextView
            android:id="@+id/feature_4_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unknown"
            android:textStyle="bold"/>

    </GridLayout>
</RelativeLayout>
